{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "jsx": "react",
        "declaration": true,
        "pretty": true,
        "rootDir": ".",
        "baseUrl": ".",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "importHelpers": true,
        "sourceMap": false,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}